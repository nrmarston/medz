<dialog id='dialog' modal-mode='mega'>
  <form method='dialog'>
    <header
      class='flex items-start justify-between gap-4 border-b border-gray-200 bg-gray-100 px-6 py-4 dark:border-gray-600 dark:bg-gray-800'
    >
      <h3 class='text-3xl font-bold'>Settings</h3>
      <button
        onclick="this.closest('dialog').close('close')"
        class='base-button inline-flex aspect-square shrink-0 items-center justify-center rounded-full bg-white p-[0.75ch] text-gray-950 shadow-sm dark:bg-gray-600 dark:text-white'
        ><svg
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 24 24'
          stroke-width='1.5'
          stroke='currentColor'
          class='size-6'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M6 18 18 6M6 6l12 12'></path>
        </svg>
      </button>
    </header>
    <article class='px-6 py-4 dark:bg-gray-700'>
      <div
        class='mb-4 flex flex-col items-start gap-4 border-b border-gray-200 pb-4 dark:border-gray-600'
      >
        <h4 class='text-muted text-lg leading-none font-medium uppercase'>
          Time (minutes)
        </h4>
        <div class='grid grid-cols-3 gap-4'>
          <div class='flex flex-col gap-2'>
            <label for='flow' class='text-muted text-sm leading-none font-bold'
              >Flow</label
            >
            <select
              id='flow'
              name='flow'
              class='rounded bg-gray-200 p-2 dark:bg-gray-600'
            >
              <option value='15'>15</option>
              <option value='20'>20</option>
              <option value='25' selected>25</option>
              <option value='30'>30</option>
              <option value='45'>45</option>
              <option value='50'>50</option>
              <option value='60'>60</option>
              <option value='90'>90</option>
            </select>
          </div>
          <div class='flex flex-col gap-2'>
            <label
              for='short-break'
              class='text-muted text-sm leading-none font-bold'
              >Short Break</label
            >
            <select
              id='short-break'
              name='short-break'
              class='rounded bg-gray-200 p-2 dark:bg-gray-600'
            >
              <option value='5' selected>5</option>
              <option value='10'>10</option>
              <option value='15'>15</option>
            </select>
          </div>
          <div class='flex flex-col gap-2'>
            <label
              for='long-break'
              class='text-muted text-sm leading-none font-bold'
              >Long Break</label
            >
            <select
              id='long-break'
              name='long-break'
              class='rounded bg-gray-200 p-2 dark:bg-gray-600'
            >
              <option value='15' selected>15</option>
              <option value='20'>20</option>
              <option value='30'>30</option>
            </select>
          </div>
        </div>
      </div>
      <!-- Font radio buttons -->
      <div
        class='mb-4 flex items-center justify-between gap-4 border-b border-gray-200 pb-4 dark:border-gray-600'
      >
        <h4 class='text-muted text-lg leading-none font-medium uppercase'>
          Font
        </h4>
        <div class='grid grid-cols-3 gap-4'>
          <div class='flex flex-col gap-2'>
            <label for='font-sans' class='sr-only'>Sans</label>
            <input
              type='radio'
              id='font-sans'
              name='font'
              value='sans'
              class='peer hidden'
            />
            <label
              for='font-sans'
              class='flex h-10 w-10 cursor-pointer items-center justify-center rounded-full border-2 border-gray-300 bg-white font-sans text-lg transition-colors peer-checked:bg-gray-950 peer-checked:text-white dark:border-gray-500 dark:bg-gray-800 dark:peer-checked:bg-gray-600'
              >Aa</label
            >
          </div>
          <div class='flex flex-col gap-2'>
            <label for='font-serif' class='sr-only'>Serif</label>
            <input
              type='radio'
              id='font-serif'
              name='font'
              value='serif'
              class='peer hidden'
            />
            <label
              for='font-serif'
              class='flex h-10 w-10 cursor-pointer items-center justify-center rounded-full border-2 border-gray-300 bg-white font-serif text-lg transition-colors peer-checked:bg-gray-950 peer-checked:text-white dark:border-gray-500 dark:bg-gray-800 dark:peer-checked:bg-gray-600'
              >Aa</label
            >
          </div>
          <div class='flex flex-col gap-2'>
            <label for='font-mono' class='sr-only'>Mono</label>
            <input
              type='radio'
              id='font-mono'
              name='font'
              value='mono'
              class='peer hidden'
            />
            <label
              for='font-mono'
              class='flex h-10 w-10 cursor-pointer items-center justify-center rounded-full border-2 border-gray-300 bg-white font-mono text-lg transition-colors peer-checked:bg-gray-950 peer-checked:text-white dark:border-gray-500 dark:bg-gray-800 dark:peer-checked:bg-gray-600'
              >Aa</label
            >
          </div>
        </div>
      </div>
      <!-- Color radio buttons -->
      <div class='mb-4 flex items-center justify-between gap-4'>
        <h4 class='text-muted text-lg leading-none font-medium uppercase'>
          Color
        </h4>
        <div class='grid grid-cols-3 gap-4'>
          <div class='flex flex-col gap-2'>
            <label for='color-green' class='sr-only'>Green</label>

            <label
              for='color-green'
              class='flex h-10 w-10 cursor-pointer items-center justify-center rounded-full border-2 border-gray-300 bg-green-600 transition-colors peer-checked:border-white dark:border-gray-500'
            >
              <input
                type='radio'
                id='color-green'
                name='color'
                value='green'
                class='peer hidden'
              />
              <svg
                xmlns='http://www.w3.org/2000/svg'
                fill='none'
                viewBox='0 0 24 24'
                stroke-width='1.5'
                stroke='currentColor'
                class='hidden size-6 text-white peer-checked:block'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  d='m4.5 12.75 6 6 9-13.5'></path>
              </svg>
            </label>
          </div>
          <div class='flex flex-col gap-2'>
            <label for='color-red' class='sr-only'>Red</label>

            <label
              for='color-red'
              class='flex h-10 w-10 cursor-pointer items-center justify-center rounded-full border-2 border-gray-300 bg-red-600 transition-colors peer-checked:border-white dark:border-gray-500'
            >
              <input
                type='radio'
                id='color-red'
                name='color'
                value='red'
                class='peer hidden'
              />
              <svg
                xmlns='http://www.w3.org/2000/svg'
                fill='none'
                viewBox='0 0 24 24'
                stroke-width='1.5'
                stroke='currentColor'
                class='hidden size-6 text-white peer-checked:block'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  d='m4.5 12.75 6 6 9-13.5'></path>
              </svg>
            </label>
          </div>
          <div class='flex flex-col gap-2'>
            <label for='color-blue' class='sr-only'>Blue</label>
            <label
              for='color-blue'
              class='flex h-10 w-10 cursor-pointer items-center justify-center rounded-full border-2 border-gray-300 bg-blue-600 transition-colors peer-checked:border-white dark:border-gray-500'
            >
              <input
                type='radio'
                id='color-blue'
                name='color'
                value='blue'
                class='peer hidden'
              />
              <svg
                xmlns='http://www.w3.org/2000/svg'
                fill='none'
                viewBox='0 0 24 24'
                stroke-width='1.5'
                stroke='currentColor'
                class='hidden size-6 text-white peer-checked:block'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  d='m4.5 12.75 6 6 9-13.5'></path>
              </svg>
            </label>
          </div>
        </div>
      </div>
    </article>
    <footer>
      <menu>
        <button type='submit' value='confirm' class='base-button'>Apply</button>
      </menu>
    </footer>
  </form>
</dialog>
